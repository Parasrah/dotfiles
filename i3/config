# i3 config file (v4)

# variables
# super Mod4
# alt Mod1
set $mod Mod3
set $super Mod4

set $ws1  "1:code"
set $ws2  "2:web"
set $ws3  "3:data"
set $ws4  "4:view"
set $ws5  "5:vscode"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9:game"
set $ws10 "10"
set $ws11 "11:social"
set $ws12 "12:music"
set $ws13 "13:term"

set $up    k
set $down  j
set $left  h
set $right l

bindsym $mod+1         workspace --no-auto-back-and-forth $ws1
bindsym $mod+2         workspace --no-auto-back-and-forth $ws2
bindsym $mod+3         workspace --no-auto-back-and-forth $ws3
bindsym $mod+4         workspace --no-auto-back-and-forth $ws4
bindsym $mod+5         workspace --no-auto-back-and-forth $ws5
bindsym $mod+6         workspace --no-auto-back-and-forth $ws6
bindsym $mod+7         workspace --no-auto-back-and-forth $ws7
bindsym $mod+8         workspace --no-auto-back-and-forth $ws8
bindsym $mod+9         workspace --no-auto-back-and-forth $ws9
bindsym $mod+0         workspace --no-auto-back-and-forth $ws10
bindsym $mod+minus     workspace                          $ws11
bindsym $mod+equal     workspace                          $ws12
bindsym $mod+backslash workspace                          $ws13

# move focused container to workspace
bindsym $mod+Shift+1     move container to workspace $ws1
bindsym $mod+Shift+2     move container to workspace $ws2
bindsym $mod+Shift+3     move container to workspace $ws3
bindsym $mod+Shift+4     move container to workspace $ws4
bindsym $mod+Shift+5     move container to workspace $ws5
bindsym $mod+Shift+6     move container to workspace $ws6
bindsym $mod+Shift+7     move container to workspace $ws7
bindsym $mod+Shift+8     move container to workspace $ws8
bindsym $mod+Shift+9     move container to workspace $ws9
bindsym $mod+Shift+0     move container to workspace $ws10
bindsym $mod+Shift+minus move container to workspace $ws11
bindsym $mod+Shift+equal move container to workspace $ws12

workspace_auto_back_and_forth yes

# # gaps
# for_window [class=".*"] border pixel 0
# gaps outer 0
# gaps inner 15

# fonts
font pango:Noto Sans Regular 10

# volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pulseaudio-ctl up
bindsym XF86AudioLowerVolume exec --no-startup-id pulseaudio-ctl down
bindsym XF86AudioMute        exec --no-startup-id pulseaudio-ctl mute
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# screen brightness controls
bindsym XF86MonBrightnessUp   exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# media player controls
bindsym XF86AudioPlay  exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext  exec playerctl next
bindsym XF86AudioPrev  exec playerctl previous

# default workspace layout
workspace_layout default

# title padding
title_align center

# workspace assignment
assign [class="Brave"]                                            → $ws2
assign [class="azuredatastudio"]                                  → $ws3
assign [class="Chromium"]                                         → $ws4
assign [class="chrome"]                                           → $ws4
assign [class="Firefox"]                                          → $ws4
assign [class="code"]                                             → $ws5
assign [class="Teams" title="^(?!Microsoft Teams Notification$)"] → $ws11
assign [class="Signal"]                                           → $ws11
assign [class="discord"]                                          → $ws11
assign [class="__scratchpad"]                                     → $ws13
# https://community.spotify.com/t5/Desktop-Linux/WM-CLASS-window-property-on-Linux/m-p/1315693#M153640
# assign [class="Spotify"] → $ws12
for_window [class="Spotify"] move to workspace $ws12

# notifications
for_window [title="Microsoft Teams Notification"] floating enable

# kitty
set $scratchpad_kitty kitty --class=__scratchpad --listen-on=unix:@kitty-scratch-{kitty_pid}

# start programs
bindsym $mod+Shift+backslash exec --no-startup-id $scratchpad_kitty

# use mouse+$mod to drag floating windows
floating_modifier $mod

# open terminal
bindsym $mod+Return exec kitty

# backup in case format messed up
bindsym $super+Return exec kitty
bindsym $super+\ exec fix-keyboard

# kill window
bindsym $mod+Shift+q kill

# application picker
bindsym $mod+d exec "rofi -show combi -dpi $(xrdb -query | rg dpi | rg '\d+' -o)"

# screenshots
bindsym Print exec "flameshot gui"

# reload config
bindsym $mod+Shift+c reload

# restart i3
bindsym $mod+Shift+r restart

# system state
mode "exit: [l]ock, [L]ogout, [r]eboot, [s]hutdown" {
  bindsym l mode default, exec $HOME/.config/i3/lock
  bindsym Shift+l exec i3-msg exit
  bindsym r exec reboot
  bindsym s exec shutdown now
  bindsym Escape mode "default"
  bindsym Control+bracketleft mode "default"
}

bindsym $mod+Shift+e mode "exit: [l]ock, [L]ogout, [r]eboot, [s]hutdown"

# change focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# prevent focus from wrapping window
focus_wrapping no

# move focused window
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up
bindsym $mod+Shift+$right move right

# split in horizontal orientation
bindsym $mod+x split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+c focus child

# move to next/prev workspace
bindsym $mod+bracketleft  workspace prev
bindsym $mod+bracketright workspace next

mode "resize" {
        bindsym $left  resize shrink width  10 px or 10 ppt
        bindsym $down  resize grow   height 10 px or 10 ppt
        bindsym $up    resize shrink height 10 px or 10 ppt
        bindsym $right resize grow   width  10 px or 10 ppt

        bindsym Return              mode "default"
        bindsym Escape              mode "default"
        bindsym Control+bracketleft mode "default"
        bindsym $mod+r              mode "default"
}

# colors
# class                 border  backgr. text    indicator child_border
client.focused          #212121 #212121 #ffffff #616161   #212121
client.focused_inactive #333333 #333333 #ffffff #484e50   #5f676a
client.unfocused        #424242 #424242 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #000000

bindsym $mod+r mode "resize"

# startup
exec        --no-startup-id flameshot
exec        --no-startup-id i3-msg workspace $ws1
exec        --no-startup-id xss-lock --transfer-sleep-lock -- $HOME/.config/i3/lock --nofork
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
